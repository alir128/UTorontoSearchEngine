<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Views.ProfileActivity">

    <TextView
        android:id="@+id/sign_up_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="329dp"
        android:layout_marginEnd="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:text="User Profile"
        android:textSize="30dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/activity_user_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="92dp"
        android:text="User Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_user_name_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_name_text_view"
        android:layout_marginEnd="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_user_name_text_view" />

    <TextView
        android:id="@+id/activity_email_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_name_edit_text"
        android:layout_marginEnd="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_user_name_edit_text" />

    <EditText
        android:id="@+id/activity_email_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_email_text_view"
        android:layout_marginEnd="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_email_text_view" />

    <TextView
        android:id="@+id/activity_group_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_email_edit_text"
        android:layout_marginEnd="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="Group Course"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_email_edit_text" />

    <EditText
        android:id="@+id/activity_group_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_group_text_view"
        android:layout_marginEnd="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_group_text_view" />

    <Button
        android:id="@+id/activity_flight_info_save_button"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_group_edit_text"
        android:layout_marginBottom="56dp"
        android:layout_marginHorizontal="15dp"
        android:onClick="profileChange"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>